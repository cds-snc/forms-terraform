{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "ES2022",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "typeRoots": ["./types", "./node_modules/@types"],
    "preserveConstEnums": true,
    "sourceMap": false,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": "."
  },
  "inlineSource": true,
  "sourceMap": true,
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
